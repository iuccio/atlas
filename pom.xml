<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>ch.sbb.atlas</groupId>
  <artifactId>atlas-apim-configuration</artifactId>
  <version>0.51.0-SNAPSHOT</version>

  <packaging>pom</packaging>

  <name>Atlas APIM Configuration</name>

  <build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>com.googlecode.maven-download-plugin</groupId>
					<artifactId>download-maven-plugin</artifactId>
					<version>1.6.7</version>
				</plugin>
			</plugins>
		</pluginManagement>
    <plugins>
      <!-- Download API specs -->
      <plugin>
        <groupId>com.googlecode.maven-download-plugin</groupId>
        <artifactId>download-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-dev-spec</id>
            <goals>
              <goal>wget</goal>
            </goals>
            <configuration>
              <url>https://atlas-gateway.dev.sbb-cloud.net/v3/api-docs.yaml</url>
              <outputFileName>spec.yaml</outputFileName>
              <outputDirectory>${project.basedir}/src/main/resources/api-dev</outputDirectory>
            </configuration>
          </execution>
					<execution>
						<id>copy-test-spec</id>
						<goals>
							<goal>wget</goal>
						</goals>
						<configuration>
							<url>https://atlas-gateway.test.sbb-cloud.net/v3/api-docs.yaml</url>
							<outputFileName>spec.yaml</outputFileName>
							<outputDirectory>${project.basedir}/src/main/resources/api-test</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>copy-int-spec</id>
						<goals>
							<goal>wget</goal>
						</goals>
						<configuration>
							<url>https://atlas-gateway.int.sbb-cloud.net/v3/api-docs.yaml</url>
							<outputFileName>spec.yaml</outputFileName>
							<outputDirectory>${project.basedir}/src/main/resources/api-int</outputDirectory>
						</configuration>
					</execution>
          <execution>
            <id>copy-prod-spec</id>
            <goals>
              <goal>wget</goal>
            </goals>
            <configuration>
              <url>https://atlas-gateway.prod.sbb-cloud.net/v3/api-docs.yaml</url>
              <outputFileName>spec.yaml</outputFileName>
              <outputDirectory>${project.basedir}/src/main/resources/api-prod</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- Assembly of Zips -->
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.1.1</version>
        <executions>
          <execution>
            <id>create-apim-zip</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <appendAssemblyId>false</appendAssemblyId>
              <descriptors>
                <descriptor>assembly.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
          <execution>
            <id>dev</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>assembly-dev.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
          <execution>
            <id>test</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>assembly-test.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
          <execution>
            <id>int</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>assembly-int.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>2.8.2</version>
        <goals />
      </plugin>
    </plugins>
  </build>
</project>
